<view>
  <view class="section tc">
  <video class="video" poster="{{room.cover_img}}" title="{{room.name}}" wx:for="{{room.video}}" src="{{item.media_url}}"  controls></video>
</view>

<view>
<view class="room_title">{{room.name}}</view>
<view class="goods_wrap">
<view wx:for="{{room.goods}}" wx:key="index" class="goods_item">
 <view class="item_img">
 <image src="{{item.cover_img}}"></image>
 </view>
 <view class="item_info">
 <view class="item_title">{{item.name}}</view>
  <view class="item_price">优惠价：{{item.price/100}}</view>
 </view>
</view>
</view>
</view>

</view>

