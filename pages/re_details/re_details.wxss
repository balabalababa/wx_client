.go_pay{
  height: 200rpx;
  background-color: #0099ff;
  position: relative;
}
.go_pay .obli{
  position: absolute;
  font-size: 40rpx;
  color: white;
  font-weight: bold;
  top: 50%;
  transform: translateY(-50%);
  left: 20rpx;
}

.go_pay .cancel{
  font-size: 26rpx;
  color: white;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 236rpx;
}

.pay_name{
  display: flex;
  flex-direction: column;
  border-bottom: 3rpx solid #f5f5f5;
  padding-top:30rpx;
  padding-left: 20rpx; 
}
.pay_name .name{
  font-size: 30rpx;
  color: #333;
  padding-bottom: 25rpx;
}

.bg{
  height: 20rpx;
  background-color: #f5f5f5;
}

.content{
  display: flex;
  flex-direction: column;
  margin: 0 26rpx;
}
.content .plan{
  padding: 40rpx 0 20rpx 0;
  font-size: 34rpx;
  width: 630rpx;
}
.detail {
  width: 602rpx;
}
.content .plan,.detail{
  margin: 0 auto;
  border-bottom: 1rpx solid #f5f5f5;
}
.content .content_v{
  display: flex;
  position: relative;
}
.content .content_v .detail{
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  color: #999;
  padding: 30rpx 0 25rpx 28rpx;
}
.content .content_v image{
   position: absolute;
   width: 11rpx;
}

.details_01{
  height: 169rpx;
  top: 46rpx;
}
.details_02{
  height: 11rpx;
  z-index: 999;
  top: 52rpx;
}
.details_03{
  height: 182rpx;
  top: 65rpx;
}
.details_04{
  height: 11rpx;
  top: 50rpx;
  z-index: 999;
}
.details_05{
  height: 179rpx;
  top: -100rpx;
}

.call{
  display: flex;
  flex-direction: column;
  padding: 20rpx 20rpx 10rpx 20rpx;
  font-size: 26rpx;
}
.call text{
  padding-bottom: 10rpx;
}
.color_blue{
  color: #0099ff;
}