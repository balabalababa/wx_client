.box{
  margin:40rpx 20rpx;
  border:1px solid #ccc;
  display: flex;
}
.box-left{
  display: flex;
  align-items: center;
}
.box-left image{
  width:250rpx;
  height:150rpx;
  margin:30rpx;
}
.box-left .text{
  font-size:30rpx;
  color:#ccc;
  height:100%;
  display: flex;
  flex-direction:column;
  justify-content: space-around;
}
.title{
  font-size:40rpx;
  color:#000;
}
.box-right{
  background:orange;
  padding:45rpx 20rpx;
  font-size:35rpx;
  margin-left:20rpx;
  writing-mode:tb-rl;
}

.btn{
  height:90rpx;
  background:#f8f8f8;
  color:orange;
  display: flex;
align-items: center;
justify-content: center;
}
.btn image{
  width:40rpx;
  height:40rpx;
  margin-right:14rpx;
}

.contractList{
  padding:0 20rpx;
}
.item{
  border-bottom:1px solid #ccc;
  display: flex;
  align-items: center;
}
.item .left{
    margin-right:10rpx;
}
.item .left image{
  width:80rpx;
  height:120rpx;
}
.item .right .status{
font-size:36rpx;
color:#000;
}
.item .right .time{
  font-size:25rpx;
  color:#ccc;
}
.item .right .yes{
color:green;
}
.item .right .wait{
  color:orange;
}
.item .right .fail{
  color:#ccc;
}
.showBox{
  position: absolute;
  top:0;
  padding:60rpx 0;
  width:100%;
  height:100%;
  border: 1ox solid #ccc;
}
.showBack{
  position: absolute;
  top:0;
  width:100%;
  height:100%;
  background: #000;
  opacity: 0.5;
}
.close{
  position: absolute;
  right:0;
  top:10rpx;
}
.close image{
  width:40rpx;
  height:40rpx;
}
.showImage {
  position: relative;
 text-align: center;
 z-index:100;
 width: 100%;
height: 100%;
}
.showImage image{
   width: 100%;
height: 100%;
}