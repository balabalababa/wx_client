.addrInfo{
  padding:0 20rpx;
  border-top:10rpx solid #ccc;
    border-bottom:10rpx solid #ccc;
}
.section{
  display: flex;
  padding:34rpx 0;
  font-size:28rpx;
  text-align: center;
  border-bottom:1px solid #ccc;
    color:#666;
}
.addrInfo .section:last-child{
  border:none;
}
.section text{
  width:150rpx;
  color:#333;
  font-size:28rpx;
  display: flex;
  align-items: center;
}
input{
  text-align: left;
}
.item {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
  height: 100rpx;
  align-items: center;
  font-size: 28rpx;
}
.goodInfo {
  padding: 50rpx 0;
  height: 118rpx;
}

.goodInfo image {
  height: 118rpx;
  width: 240rpx;
}

.good {
  width: 420rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}

.good-title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.good_news {
  display: flex;
  align-items: center;
}

.good_news image {
  width: 30rpx;
  height: 30rpx;
}

.color{
  color: #ff8600;
}
.btn-area{
  margin-top:50rpx;
  padding:0 40rpx;
}
.btn-area button{
  background:#019f55;
  height:100rpx;
  font-size:32rpx;
  line-height:100rpx;
  color:#fff;
}