.cells{
  display: flex;
  flex-direction: column;
  position: relative;
  background-color: #f5f5f5;
}

.cells .bg{
  width: 250rpx;
  height: 30rpx;
  border-bottom: 2rpx solid #000;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}
.cells .title{
  font-size: 30rpx;
  line-height: 61rpx;
  height: 61rpx;
  width: 170rpx;
  text-align: center;
  margin: 0 auto;
  background-color: #f5f5f5;
  z-index: 999;
}
.cells .item{
  display: flex;
  border-bottom: 1rpx solid #eee;
  position: relative;
  background-color: #fff;
}
.cells .item image{
  width: 168rpx;
  height: 168rpx;
  margin: 30rpx 20rpx;
  border-radius: 15rpx;
}
.cells .item .meta{
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  margin-top: 25rpx;
  width:355rpx;
}
.cells .item .meta .name {
  color: #000;
  font-size: 34rpx;
  font-weight: bold;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.cells .item .meta .youhui {
  color: #666666;
  font-size: 24rpx;
  margin-top: 10rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.cells .item .meta .tips{
  margin-top: 15rpx;
  font-size: 20rpx;
  color: #ff1919;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  padding-bottom: 5rpx;
  padding-top:5rpx;
}
.cells .item .meta .tips text{
  padding: 2rpx 10rpx;
  border: 1rpx solid #ff1919;
  margin-right: 10rpx;
  border-radius: 8rpx;
}

.cells .item .meta .money{
  font-size: 22rpx;
  color: #234;
  margin-top: 5rpx;
}
.cells .item .meta .money text{
  font-size: 34rpx;
  color: red;
  font-weight: bold;
}
.cells .item .address{
  font-size: 28rpx;
  position: absolute;
  right: 10rpx;
  bottom: 20rpx;
}
.loadmore{
  background-color: #eee;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: center;
}