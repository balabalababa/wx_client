.comment{
  margin: 0 20rpx;
  display: flex;
  flex-direction: column;
}
.comment .com_num{
  padding: 30rpx 0 10rpx 0;
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}
.comment .com_detail{
  margin-top: 20rpx;
}
.comment .com_detail image{
  width: 108rpx;
  height: 108rpx;
  margin-right: 20rpx;
  float: left;
}
.comment .com_detail .de_content{
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #f5f5f5;
}
.comment .com_detail .de_content .name{
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}
.comment .com_detail .de_content .mark{
  width: 100%;
  height: 50rpx;
}
.comment .com_detail .de_content .mark text{
  font-size: 24rpx;
  padding: 10rpx 0;
  float: left;
  margin-right: 15rpx;
}
.comment .com_detail .de_content .mark image{
  width: 26rpx;
  height: 26rpx;
  padding: 11rpx 0;
  margin-right: 2rpx;
}
.comment .com_detail .de_content .contents{
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient:vertical;
  text-overflow: ellipsis;
  overflow:hidden; 
/* 通过以上四行实现收缩功能 */
}
.comment .com_detail .de_content .quanwen{
  font-size: 24rpx;
  color: #7ec052;
  padding: 20rpx 0;
}
.comment .com_detail .de_content .ceji image{
  width: 168rpx;
  height: 168rpx;
}
.comment .com_detail .de_content .liulan{
  font-size: 24rpx;
  color: #999;
  text-align: right;
  padding: 20rpx 0;
}
.comment .loadmore{
  padding: 30rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #7ec052;
}

.ellipsis{
-webkit-line-clamp:3;
/* 显示3行 */
}

.unellipsis{
-webkit-line-clamp:0;/* 全部显示 */
}

.loadmore{
  background-color: #eee;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: center;
}