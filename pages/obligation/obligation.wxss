.red{
  color: #ff1919;
  font-size: 30rpx;
  font-weight: bold;
}
.color_red{
  color: #ff1919;
}
.border-10{
  border-bottom: 3rpx solid #f5f5f5;
}
.border1{
  border-bottom: 3rpx solid #f5f5f5;
  padding-bottom: 20rpx;
}
.bold{
  font-weight: bold;
}
.color_blue{
  color: #0099ff;
}

.go_pay{
  height: 200rpx;
  background-color: #0099ff;
  position: relative;
}
.go_pay .obli{
  position: absolute;
  font-size: 40rpx;
  color: white;
  font-weight: bold;
  top: 46rpx;
  left: 20rpx;
}
.go_pay .time{
  color: white;
  position: absolute;
  top: 39rpx;
  right: 20rpx;
}
.go_pay .time text:first-of-type{
  font-size: 26rpx;
}
.go_pay .continue{
  width: 360rpx;
  height: 72rpx;
  text-align: center;
  line-height: 72rpx;
  color: white;
  font-size: 32rpx;
  position: absolute;
  bottom: 18rpx;
  left: 50%;
  transform: translateX(-50%);
  border: 1rpx solid #fff;
  border-radius: 15rpx;
}
.content{
  display: flex;
  flex-direction: column;
}
.pay_name{
  display: flex;
  flex-direction: column;
  border-bottom: 3rpx solid #f5f5f5;
}
.pay_name .name{
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  padding: 20rpx;
}
.pay_name .tip{
  height: 32rpx;
  line-break: 36rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #ff1919;
}

.content .bianhao{
  padding: 40rpx 20rpx;
  font-size: 40rpx;
  color: #000;
  font-weight: bold;
  border-bottom: 3rpx solid #f5f5f5;
}

.content .money{
  color: #666;
  padding: 20rpx 0 15rpx 20rpx;
  position: relative;
  font-size: 26rpx;
}
.content .money .m{
  position: absolute;
  right: 20rpx;
}

.content .tips{
  display: flex;
  flex-direction: column;
  margin: 20rpx;
  border: 3rpx solid #f5f5f5;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
}
.content .tips text{
  font-size: 28rpx;
}
.content .tips .re_rules{
  width: 100%;
  font-size: 28rpx;
  margin: 6rpx 0;
}

.content .tips .re_rulesL{
  float: left;
}

.content .tips .re_rulesR{
  float: left;
  width: 516rpx;
}
.content .ziliao{
  display: flex;
  flex-direction: column;
  border-bottom: 3rpx solid #f5f5f5;
  border-top: 3rpx solid #f5f5f5;
  padding: 10rpx 20rpx 20rpx 20rpx;
}
.content .ziliao text{
  margin-top: 10rpx;
  font-size: 28rpx;
}

.content .date{
  display: flex;
  flex-direction: column;
  padding: 10rpx 20rpx 20rpx 20rpx;
}
.content .date text{
  font-size: 28rpx;
  margin-top: 10rpx;
}

.bg{
  height: 20rpx;
  background-color: #f5f5f5;
}

.call{
  display: flex;
  flex-direction: column;
  padding: 20rpx 20rpx 10rpx 20rpx;
  font-size: 28rpx;
}
.call text{
  padding-bottom: 10rpx;
}
.show{
  display: flex;
  margin:0 20rpx;
}
.show image{
  width:220rpx;
  height:220rpx;
}
.show_text{
  display: flex;
  flex-direction:column;
  font-size:26rpx;
  margin-left:20rpx;
}